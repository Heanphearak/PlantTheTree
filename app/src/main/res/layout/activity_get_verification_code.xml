<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ForgotPasswordActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/verification_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#0C631E"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/icon_forgot_password"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_verification"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/text_forgot_password"
            app:layout_constraintTop_toBottomOf="@+id/icon_forgot_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
            android:text="Verification"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_enter_phone_email"
            app:layout_constraintTop_toBottomOf="@+id/text_forgot_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
            android:text="Please enter your verification code "
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.poovam.pinedittextfield.SquarePinField
        app:layout_constraintTop_toBottomOf="@+id/verification_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textSize="16sp"
        app:cornerRadius="0dp"
        app:fieldColor="@color/colorPrimary"
        app:isCursorEnabled="true"
        app:highlightColor="@color/colorPrimary"
        android:background="@color/colorPrimary"
        app:fieldBgColor="#0D000000"
        app:noOfFields="4"
        android:textSelectHandle="@drawable/text_handle"
        android:id="@+id/squareField"
        android:layout_marginTop="75dp"/>

    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/squareField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Verify"
        android:background="@drawable/style_btn_send"
        android:textAllCaps="false"
        android:layout_width="216dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btn_send_was_input"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/squareField"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Verify"
        android:background="@drawable/btn_send_was_input"
        android:textAllCaps="false"
        android:layout_width="216dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>