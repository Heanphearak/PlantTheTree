<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ForgotPasswordActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/forgot_layout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#0C631E"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/icon_forgot_password"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_forgot_passwordlogo"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <TextView
            android:id="@+id/text_forgot_password"
            app:layout_constraintTop_toBottomOf="@+id/icon_forgot_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
            android:text="Forgot Password ?"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/text_enter_phone_email"
            app:layout_constraintTop_toBottomOf="@+id/text_forgot_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp"
            android:text="Enter your mobile number to get code  verification "
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/edit_enter_email_phone"
        android:background="@drawable/style_input_form"
        app:layout_constraintTop_toBottomOf="@+id/forgot_layout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Mobile Number"
        android:inputType="phone"
        android:paddingLeft="75dp"
        android:layout_marginTop="65dp"
        android:layout_width="280dp"
        android:layout_height="55dp"/>
    
    <Button
        android:id="@+id/btn_send"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_enter_email_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Send"
        android:background="@drawable/style_btn_send"
        android:textAllCaps="false"
        android:layout_width="216dp"
        android:layout_height="50dp"/>
    <Button
        android:id="@+id/btn_send_was_input"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/edit_enter_email_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Send"
        android:background="@drawable/btn_send_was_input"
        android:textAllCaps="false"
        android:layout_width="216dp"
        android:layout_height="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>